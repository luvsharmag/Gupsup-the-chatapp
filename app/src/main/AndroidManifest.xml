<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gupsup">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Gupsup"
        android:usesCleartextTraffic="true">
        <activity android:name=".Activities.chatActivity"
            android:exported="true"
            android:enabled="true"
            android:theme="@style/Theme.GupsupNoactionbar"></activity>
        <activity android:name=".signin.setupprofileActivity"
            android:exported="true"
            android:enabled="true"/>
        <activity
            android:name=".signin.otpActivity"
            android:windowSoftInputMode="stateVisible"
            android:exported="true"
            android:enabled="true"/>
        <activity
            android:name=".signin.PhonenumberActivity"
            android:windowSoftInputMode="stateVisible"
            android:exported="true"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.MainActivity"
            android:exported="true"
            android:enabled="true"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>